<%- include('partials/header', { title: 'Page Title', user: user }) %>

<h2>Submissions for: <%= test.title %></h2>
<% submissions.forEach(s => { %>
  <div class="card">
    <strong><%= s.student_email %></strong> â€” submitted at <%= s.submitted_at %><br/>
    <a href="/uploads/submissions/<%= s.file_path %>" target="_blank">Download Submission</a>

    <form method="post" action="/teacher/tests/<%= test.id %>/grade/<%= s.id %>">
      <label>Grade:</label><input type="text" name="grade" value="<%= s.grade || '' %>" required />
      <label>Feedback:</label><textarea name="feedback" rows="2"><%= s.feedback || '' %></textarea>
      <button type="submit">Save Grade</button>
    </form>

    <% if (s.grade) { %>
      <div>Graded at: <%= s.graded_at %></div>
    <% } %>
  </div>
<% }) %>
<%- include('partials/footer') %>
